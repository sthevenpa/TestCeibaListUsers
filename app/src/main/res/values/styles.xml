<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green</item>
        <item name="background">@color/green</item>
        <item name="buttonTint">@color/white</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/green</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="hintTextColor">@color/green</item>
    </style>
    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="colorAccent">#FF0000</item>
    </style>
</resources>